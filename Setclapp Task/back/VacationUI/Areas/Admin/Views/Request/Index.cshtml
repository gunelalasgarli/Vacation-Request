@model List<VacationRequest>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count =0;
}



<div class="card shadow mb-4">
    <div class="card-body ">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Request No</th>
                        <th>Employee FullName</th>
                        <th>Create date</th>
                        <th>Vacation Type</th>
                        <th>Status</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody id="dataTable">
                    @foreach (var item in Model)
                    {
                       
                    <tr>
                        <th scope="row">@item.RequestNo</th>
                        <td>@item.EmployeeName</td>
                        <td>@item.CreatedAt</td>
                        <td>@item.VacationType.Name</td>
                        <td>
                            <a class="btn btn-outline-primary mb-2" asp-action="@(item.StatusNum == 0?"Check": item.StatusNum==1? "Accepted":item.StatusNum == 2 ? "Rejected":"Accepted")" asp-route-id="@item.Id">
                                @((Status)item.StatusNum)
                            </a>
                        </td>


                        <td class="col-md-3">
                            <a class="btn btn-outline-primary" asp-action="detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
            
        </div>
    </div>
</div>

