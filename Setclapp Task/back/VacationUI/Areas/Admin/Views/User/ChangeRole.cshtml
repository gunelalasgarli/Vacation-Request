@model AppUserVM
@{ Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; }


<div class="container bg-white pb-5">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row w-100">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>FullName</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.FullName</td>>
                    <td>@Model.UserName</td>
                    <td>@Model.Email</td>
                    <td>@Model.Role</td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="row mt-3 px-5">
        <div class="col-lg-12">
            <h3>Roles</h3> <br />
            <form method="post">
                @*@foreach (string item in Model.Roles)
                    {
                        if (item == Model.Role)
                        {
                            <input type="radio" name="Role" checked value="@item" />@item <br /> <br />
                        }
                        else
                        {
                            <input type="radio" name="Role" value="@item" />@item <br /> <br />
                        }
                    }*@
                <select class="form-control" asp-for="Roles">
                    @foreach (var role in Model.Roles)
                    {
        <option value="@role">@role</option>}
                </select>
                <br /> <br />
                <button type="submit" class="btn btn-primary ml-2">Change Role</button>
                <a asp-action="Index" class="btn btn-dark">Go back</a>
            </form>
        </div>
    </div>
</div>
