@model ResetPasswordVM
@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

@if (TempData["Success"] != null)
{

    @if ((bool)TempData["Success"] == true)
    {
        <input type="hidden" id="success" />
    }
    else
    {
        <input type="hidden" id="error" />

    }
}

<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-6 col-lg-6 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-2">Şifrənizi unutmusunuz?</h1>
                                    <p class="mb-4">Email adresinizi daxil edin sizə şifrənizi yeniləmək üçün link yollayaq!</p>
                                </div>
                                <form method="post" class="user">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Email adresinizi daxil edin.." name="email">
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Şifrənizi sıfırlayın
                                    </button>
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-controller="Account" asp-action="Register">Hesab yaradın!</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-controller="Account" asp-action="Login">Hesabınız var? Daxil olun!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
@section Scripts{
    <script>
        $(document).ready(function () {

            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "2000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            if ($("#success").length) {
                toastr["success"]("Email göndərildi!")
            }
            else if ($("#error").length) {
                toastr["error"]("Xəta baş verdi!")
            }

        })
    </script>
}